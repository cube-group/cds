        <div class="card mb-3">
            <div class="card-header">微服务模式</div>
            <div class="card-body">
                <div class="col-lg-6">
                    <div role="form">
                        <div class="form-group">
                            <label for="AppMode">APP_MODE</label>
                            <select id="AppMode" class="form-control">
                                <option value="production">production</option>
                                <option value="develop">develop</option>
                            </select>
                        </div>
                        <div class="form-group" style="color: red">
                            <span>
                                （注意：APP_MODE用于微服务部署时标明容器所处环境）
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <button type="button" class="btn btn-primary" id="saveBtn">确认部署</button>
        </div>

    </div>
</div>

<script>
    $(function () {
        $('#AppMode').val("{{.data.AppMode}}");
        $('#saveBtn').click(function (event) {
            onSaveSets();
        });
    });

    function onSaveSets() {
        var list = [
            "SshUsername",
            "SshPassword",
            "FacadeHost",
            "FacadeAddress",
            "BuilderAddress",
            "RegistryUsername",
            "RegistryPassword",
            "RegistryBaseAddress",
            "RegistryBaseDomain",
            "RegistryBaseHost",
            "RegistryBaseRunName",
            "RegistryServiceAddress",
            "RegistryServiceDomain",
            "RegistryServiceHost",
            "RegistryServiceRunName",
            "AppMode",
            "SvnUsername",
            "SvnPassword",
            "SvnDomain",
            "SvnHost",
            "GitUsername",
            "GitPassword",
            "GitDomain",
            "GitHost",
            "DingDing",
            "NodeTaskDefaultImages"
        ];

        var data = {};
        for (i = 0; i < list.length; i++) {
            data[list[i]] = $("#" + list[i]).val();
        }

        console.log(data);
        if (!confirm("确认进行核心配置数据修改么?")) {
            return;
        }
        $("#saveBtn").attr("disabled", true);
        $.post(
                '/sets/core',
                data,
                function (data) {
                    $("#saveBtn").attr("disabled", false);
                    if (data.code == 0) {
                        displayError(data.msg);
                        window.location.reload();
                    } else {
                        if (data.msg) {
                            displayError(data.msg)
                        } else {
                            displayError("未知错误")
                        }
                    }
                }
        )
    }
</script>